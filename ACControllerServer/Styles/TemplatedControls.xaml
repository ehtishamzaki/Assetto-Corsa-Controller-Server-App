<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ControlTemplate x:Key="dotsRotateSVG">
        <ControlTemplate.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Styles/Common.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </ControlTemplate.Resources>

        <Viewbox x:Name="dotsSpinnerViewbox" Width="20" Height="20" RenderTransformOrigin="0.5, 0.5">
            <Viewbox.RenderTransform>
                <RotateTransform x:Name="dotsSpinnerTransform" Angle="0" />
            </Viewbox.RenderTransform>
            <Viewbox.Triggers>
                <EventTrigger RoutedEvent="Control.Loaded">
                    <BeginStoryboard x:Name="SpinnerStoryBoard">
                        <Storyboard BeginTime="00:00:0.00" Duration="00:00:10.00" RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="dotsSpinnerTransform" RepeatBehavior="Forever"
                                                     Storyboard.TargetProperty="Angle" 
                                                     From="0" To="360" Duration="00:00:02.500" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Viewbox.Triggers>

            <Canvas Height="24" Width="24">
                <Ellipse Canvas.Left="11" Canvas.Top="2" Width="2" Height="2" />
                <Ellipse Canvas.Left="15.5" Canvas.Top="3.21" Width="2" Height="2" />
                <Ellipse Canvas.Left="6.5" Canvas.Top="3.21" Width="2" Height="2" />
                <Ellipse Canvas.Left="18.79" Canvas.Top="6.5" Width="2" Height="2" />
                <Ellipse Canvas.Left="3.21" Canvas.Top="6.5" Width="2" Height="2" />
                <Ellipse Canvas.Left="20" Canvas.Top="11" Width="2" Height="2" />
                <Ellipse Canvas.Left="2" Canvas.Top="11" Width="2" Height="2" />
                <Ellipse Canvas.Left="18.79" Canvas.Top="15.5" Width="2" Height="2" />
                <Ellipse Canvas.Left="3.21" Canvas.Top="15.5" Width="2" Height="2" />
                <Ellipse Canvas.Left="15.5" Canvas.Top="18.79" Width="2" Height="2" />
                <Ellipse Canvas.Left="6.5" Canvas.Top="18.79" Width="2" Height="2" />
                <Ellipse Canvas.Left="11" Canvas.Top="20" Width="2" Height="2" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>